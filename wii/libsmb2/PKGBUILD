# Maintainers: Andr√© Guilherme <andregui17@outlook.com>

pkgname=wii-libsmb2
pkgver=r307.aef1888
pkgrel=1
pkgdesc='SMB2/3 userspace client'
arch=('any')
url='https://github.com/sahlberg/libsmb2'
license=('(L)GPL')
options=(!strip libtool staticlibs)
source=(${pkgname}::"git+https://github.com/sahlberg/libsmb2.git")
sha256sums=('SKIP')
makedepends=('git' 'wii-pkg-config' 'devkitpro-pkgbuild-helpers')
groups=('wii-portlibs')

pkgver() {
  cd "$srcdir/${pkgname}"
  printf 'r%s.%s' "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd ${pkgname}

  source /opt/devkitpro/wiivars.sh

	cmake -S . -B build "-DCMAKE_TOOLCHAIN_FILE=${DEVKITPRO}/cmake/Wii.cmake" 
	cmake --build build
}

package() {
  cd ${pkgname}
  
	cmake --build build --target install
}
